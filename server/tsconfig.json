    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "rootDir": "./src",
      "outDir": "./dist",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }
  